        </dependency>

    </dependencies>


    <build>
        <finalName>ivis-client</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>com.imcode.imcms</groupId>
                            <artifactId>imcms</artifactId>
                            <excludes>
                                <exclude>WEB-INF/lib/hibernate*.jar</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                    <dependentWarExcludes>WEB-INF/lib/mysql*.jar</dependentWarExcludes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
                                <if>
                                    <not>
                                        <available file="${basedir}/local.server.properties"/>
                                    </not>
                                    <then>
                                        <copy file="${basedir}/local.server.properties.template"
                                              tofile="${basedir}/local.server.properties"/>
                                        <fail>Edit "local.server.properties".</fail>
                                    </then>
                                </if>

                                <taskdef name="mergeproperties" classname="com.imcode.ant.tasks.PropertiesMerge"/>
                                <mergeproperties
                                        srcFile="target/${project.build.finalName}/WEB-INF/conf/server.properties"
                                        mergeFile="${basedir}/local.server.properties"
                                        destFile="target/${project.build.finalName}/WEB-INF/conf/server.properties"/>

                                <if>
                                    <available file="${basedir}/src/main/webapp/WEB-INF/web.xml"/>
                                    <then>
                                        <copy file="${basedir}/src/main/webapp/WEB-INF/web.xml"
                                              tofile="${project.build.directory}/${project.build.finalName}/WEB-INF/web.xml"
                                              overwrite="true"/>
                                    </then>
                                </if>
                                <if>
                                    <available file="${project.build.directory}/classes"/>
                                    <then>
                                        <jar destfile="${project.build.directory}/${project.build.finalName}/WEB-INF/lib/${project.build.finalName}.jar"
                                             basedir="${project.build.directory}/classes" includes="**"/>
                                        <delete dir="${project.build.directory}/${project.build.finalName}/WEB-INF/classes"/>
                                    </then>
                                </if>
                                <!-- Copy all webapp files, to force overwrite, since the copied wanna-be site has newer files -->
                                <if>
                                    <available file="${basedir}/src/main/webapp/imcms/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/imcms/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/imcms/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/jsp/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/jsp/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/jsp/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/javascript/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/javascript/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/javascript/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/css/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/css/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/css/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/images_gui/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/images_gui/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/images_gui/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/WEB-INF/jsp/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/WEB-INF/jsp/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/WEB-INF/jsp/"/>
                                        </copy>
                                    </then>
                                </if>
                                <if>
                                    <available file="${basedir}/src/main/webapp/WEB-INF/templates/text/" type="dir"/>
                                    <then>
                                        <copy todir="${project.build.directory}/${project.build.finalName}/WEB-INF/templates/text/"
                                              overwrite="true">
                                            <fileset dir="${basedir}/src/main/webapp/WEB-INF/templates/text/"/>
                                        </copy>
                                    </then>
                                </if>
                                <!-- / Copy all webapp files, to force overwrite -->
                                <property file="local.server.properties"/>
                                <if>
                                    <available
                                            file="${project.build.directory}/${project.build.finalName}/${KeyStorePath}"/>
                                    <then>
                                        <signjar alias="${KeyStoreAlias}" storepass="${KeyStorePassword}"
                                                 keystore="${project.build.directory}/${project.build.finalName}/${KeyStorePath}">
                                            <fileset
                                                    dir="${project.build.directory}/${project.build.finalName}/WEB-INF/lib">
                                                <include name="${project.build.finalName}.jar"/>
                                            </fileset>
                                        </signjar>
                                    </then>
                                </if>

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.imcode.ant.tasks</groupId>
                        <artifactId>imcode-ant-tasks</artifactId>
                        <version>1.3</version>
                    </dependency>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>20020829</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>imcode</id>
            <url>http://repo.imcode.com/maven2</url>
            <snapshots>
